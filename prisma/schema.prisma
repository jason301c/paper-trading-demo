generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// PORTFOLIO table: Manages user's portfolio
model Portfolio {
  symbol           String  @id  // Primary key
  totalShares      Float
  averagePrice     Float
}

// MARKET table: Stores cached market data
model Market {
  stockTicker      String   @id  // Primary key
  stockPrice       Float
  timeOfUpdate     DateTime
}
